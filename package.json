{
  "name": "living-docs-generator",
  "version": "0.1.0",
  "description": "Intelligent MCP server for Kiro that automatically generates and maintains project documentation in real-time",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch & node --watch dist/server.js",
    "start": "node dist/server.js",
    "test": "jest",
    "test:integration": "jest --testPathPattern=integration",
    "test:performance": "node demo/tests/performance/benchmark.js",
    "test:tools": "node tools/test-mcp-detection.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist temp",
    "docs:serve": "node dist/server.js",
    "demo": "npm run build && npm run docs:serve"
  },
  "keywords": [
    "mcp",
    "documentation",
    "kiro",
    "typescript",
    "real-time"
  ],
  "author": "Living Docs Generator Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sgharlow/kiro-living-docs-devpost.git"
  },
  "bugs": {
    "url": "https://github.com/sgharlow/kiro-living-docs-devpost/issues"
  },
  "homepage": "https://github.com/sgharlow/kiro-living-docs-devpost#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "chokidar": "^3.5.3",
    "express": "^4.18.2",
    "glob": "^10.3.10",
    "js-yaml": "^4.1.0",
    "simple-git": "^3.20.0",
    "typescript": "^5.2.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.5",
    "@types/js-yaml": "^4.0.9",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.8.0",
    "@types/ws": "^8.5.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
